<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Marmiwild{% endblock %}</title>

        {% block stylesheets %}  {% endblock %}

        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

        <!-- Optional theme -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">


            <link href="https://fonts.googleapis.com/css?family=Comfortaa|Lobster+Two|Poiret+One" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('assets/css/stylesheet.css') }}">
            <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    </head>
    <body>

    <!-- Top menu -->
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header menu">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('recette_index') }}"><img class="img-responsive" alt="logo" src="{{ asset('assets/img/Logo.png') }}"></a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <form class="navbar-form navbar-right" action="{{ path('recette_search') }}" method="POST">
                    <div class="form-group">
                        <input type="text" name="keyword" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">Rechercher</button>
                </form>

                <form class="navbar-form navbar-right" action="{{ path('recette_personne') }}" method="POST">
                    <div class="form-group">
                        <input type="text" name="personnes" class="form-control" placeholder="Recette pour">
                    </div>
                    <button type="submit" class="btn btn-default">Personnes</button>
                </form>

                <ul class="nav navbar-nav navbar-right">
                    <li><a class="scroll-link" href="{{ path('recette_new') }}">Ajouter une recette</a></li>
                    {#<li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>#}
                    <li><a href="{{ path('recette_index') }}">Listing</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Recettes <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('recette_filter', {'type':'entree' }) }}">Entrées</a></li>
                            <li><a href="{{ path('recette_filter', {'type':'plat' }) }}">Plats</a></li>
                            <li><a href="{{ path('recette_filter', {'type':'dessert' }) }}">Desserts</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>



    {% for message in app.session.flashbag.get('info') %}
        <div class="flash-box col-md-offset-3 col-md-3">
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                    ×</button>
                <span class="glyphicon glyphicon-ok"></span> <strong>Notification</strong>
                <hr class="message-inner-separator">
                <p>{{ message }}</p>
            </div>
        </div>
    {% endfor %}

        {% block body %}{% endblock %}

    <section class="footer">
        <div class="col-lg-12  col-md-12 col-sm-12">
            <div class="footer_dv">
                <center>
                    <h4>Contactez-nous</h4>
                    <a href="https://www.facebook.com/wildcodeschool/" target="_blank"><i class="fa fa-facebook fa-2x" aria-hidden="true"></i></a>
                    <a href="https://twitter.com/wildcodeschool" target="_blank"><i class="fa fa-twitter fa-2x" aria-hidden="true"></i></a>
                    <a href="https://twitter.com/wildcodeschool" target="_blank"><i class="fa fa-linkedin fa-2x" aria-hidden="true"></i></a>
                    <a href="https://www.youtube.com/channel/UCi99G_0QPx5sYsK8zdvQzfw" target="_blank"><i class="fa fa-youtube-play fa-2x" aria-hidden="true"></i></a>
                    <a href="https://www.instagram.com/wildcodeschool/" target="_blank"><i class="fa fa-instagram fa-2x" aria-hidden="true"></i></a>
                    <a href="https://github.com/WildCodeSchool" target="_blank"><i class="fa fa-github fa-2x" aria-hidden="true"></i></a>
                </center> <br/> <br/>
            </div>
        </div>

        <div class="container">
            <div class="row">

                <div class="col-lg-4  col-md-4 col-sm-4">
                    <div class="footer_dv">
                        <h4>Services</h4>
                        <ul>
                            <li class="line_rv"><a href="">Web Design</a></li>
                            <li><a href="">Development</a></li>
                            <li><a href="">Hosting</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-4  col-md-4 col-sm-4">
                    <div class="footer_dv">
                        <h4>About</h4>
                        <ul>
                            <li><a href="">Company</a></li>
                            <li><a href="">Team</a></li>
                            <li><a href="">Careers</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-4  col-md-4 col-sm-4">
                    <div class="footer_dv">
                        <h4>Company Name</h4>
                        <ul>
                            <p>Wild Code School</p>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <script src="{{ asset('assets/js/jquery.js') }}"></script>
    <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/js/show_card_profile.js') }}"></script>


    {% block javascripts %}

        {% endblock %}
    </body>
</html>
